<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.actionActivities.firewallActionsActivities.ShowRules">

    <RelativeLayout
        android:id="@+id/rule_nodes_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="386dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp"
        android:text="@string/rules"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/show_rules_anim_load"
        android:layout_width="187dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="176dp"
        android:indeterminate="true"
        android:visibility="invisible"
        app:SpinKit_Color="@color/design_default_color_primary" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/b_add_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="35dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_add_icon"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="15dp"
        app:fabCustomSize="@android:dimen/notification_large_icon_width" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/b_update_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/b_add_rule"
        android:layout_alignParentStart="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_orange_light"
        app:elevation="15dp"
        app:fabCustomSize="@android:dimen/notification_large_icon_height"
        app:srcCompat="@drawable/ic_update"
        android:focusable="true" />

</RelativeLayout>